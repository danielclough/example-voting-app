pipeline {
    agent any
    
    tools{
        nodejs '8.9.0'
    }

    stages{
        stage('build'){
            when { changeset "**/result/*" }
            steps{
                echo 'Building'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        stage('test'){
            when { changeset "**/result/*" }
            steps{
                echo 'Testing'
                dir('result'){    
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
    }
    post{
        always{
            echo 'Complete!'
        }
    }
}