pipeline {
    agent none
    
    tools{
        nodejs '8.9.0'
    }

    stages{
        stage('build'){
            agent{
                docker{
                    image 'node:8.9-alpine'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            when { changeset "**/result/**" }
            steps{
                echo 'Building'
                dir('result'){
                    sh 'npm install'
                }
            }
        }
        stage('test'){
            agent{
                docker{
                    image 'node:8.9-alpine'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            when { changeset "**/result/**" }
            steps{
                echo 'Testing'
                dir('result'){    
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
        stage('docker-package'){
            agent any
            when { 
                changeset "**/result/**" 
                // branch 'master'
            }
            steps{
                echo 'Packaging with Docker'       
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerPW') {
                        def resultImage = docker.build("danielclough/result:v${env.BUILD_ID}", "./result")
                        resultImage.push()
                        resultImage.push("${env.BRANCH_NAME}")
                    }
                }
            }
        }
    }
    post{
        always{
            echo 'Complete!'
        }
    }
}
