pipeline {
    agent{
        docker{
            image 'maven:3.6.1-jdk-8-slim'
        }
    }
    
    stages{
        stage('build'){
            steps{
                echo 'Compiling'
                dir('worker'){
                    sh 'mvn compile'}
            }
        }
        stage('test'){
            steps{
                echo 'Testing'              
                dir('worker'){
                    sh 'mvn clean test'}
            }
        }
        stage('package'){
            steps{
                echo 'Packaging '       
                dir('worker'){
                    sh 'mvn package -DskipTests'
                    archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                }         
            }
        }
    }
    post{
        always{
            echo 'Complete!'
        }
    }
}