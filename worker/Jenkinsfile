pipeline {

    agent none 
    
    stages{
        stage('build'){

            agent{
                docker{
                    image 'maven:3.6.1-jdk-8-slim'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }

            when { changeset "**/worker/**" }
            steps{
                echo 'Compiling'
                dir('worker'){
                    sh 'mvn -e compile'}
            }
        }
        stage('test'){

            agent{
                docker{
                    image 'maven:3.6.1-jdk-8-slim'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }

            when { changeset "**/worker/**" }
            steps{
                echo 'Testing'              
                dir('worker'){
                    sh 'mvn -e clean test'}
            }
        }
        stage('docker-package'){

            agent any

            when { changeset "**/worker/**" }
            steps{
                echo 'Packaging with Docker'       
                script {
                    docker.withRefistry('https://index.docker.io/v1', dockerhub) {
                        def workerImage = docker.build("danielclough/worker:v${env.BUILD_ID}", "./worker")
                        workerImage.push()
                        workerImage.push("${env.BRANCH_NAME}")
                    }
                }
            }
        }
    }

    post{
        always{
            echo 'Complete!'
        }
    }
}